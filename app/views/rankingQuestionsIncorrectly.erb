<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="styles/rankingQuestions.css">
  <title>Ranking question incorrectly</title>
</head>
<body>
<audio id="background-audio" autoplay loop>
  <source src="/musicLobby.mp3" type="audio/mp3">
  Your browser does not support the audio element.
</audio>
<div class="container">
  <h1>Ranking incorrectly answered questions</h1>
  <table border="1">
    <tr>
      <th>Rank</th>
      <th>Description</th>
      <th>Score</th>
    </tr>
    <% @questions.each_with_index do |question, index| %>
      <tr>
        <td>
          <% if index == 0 %>
            <span class="gold">ðŸ¥‡</span>
          <% elsif index == 1 %>
            <span class="silver">ðŸ¥ˆ</span>
          <% elsif index == 2 %>
            <span class="bronze">ðŸ¥‰</span>
          <% else %>
            <%= index + 1 %>
          <% end %>
        </td>
        <td><%= question.description %></td>
        <td><%= question.incorrect_count %></td>
      </tr>
    <% end %>
  </table>
</div>
<form method="post">
  <input type="hidden" name="back">
  <button type="submit" class="buttonBack"><i class="fas fa-arrow-left"></i> Back</button>
</form>
<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        const audio = document.getElementById('background-audio');
        audio.volume = 0.1;

        // Retrieve the playback time from localStorage
        const savedTime = localStorage.getItem('audioTime');
        if (savedTime) {
            audio.currentTime = savedTime;
        }

        // Save the playback time periodically
        setInterval(() => {
            localStorage.setItem('audioTime', audio.currentTime);
        }, 1000);
    });
</script>
</body>
</html>
